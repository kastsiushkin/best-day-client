<div class="Grid Grid--full">
  <div class="Grid__item desk--oneThird portable--oneWhole">
    <form {{action "create" on="submit"}}>
      <div class="">
        <label for="dayName">Name</label>
        {{input type="text" value=name required='true'}}
      </div>
      <div class="">
        <label for="dayAddress">Address</label>
        {{input type="text" value=address required='true'}}
      </div>
      <div class="">
        <label for="dayDescription">Description</label>
        {{input type="text" value=description required='true'}}
      </div>
      <div class="">
        {{input type="submit" value="Submit"}}
      </div>
    </form>
  </div>
</div>
